{
  "name": "@campus/bff",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "predev": "pnpm --filter @campus/shared build && pnpm --filter @campus/institutions build",
    "dev": "tsx watch src/server.ts",
    "dev:once": "tsx src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc -p tsconfig.json",
    "test": "vitest run"
  },
  "dependencies": {
    "@campus/institutions": "workspace:*",
    "@campus/shared": "workspace:*",
    "rrule": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "vitest": "^2.1.8"
  }
}
